<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="TemplateTheme" parent="AppTheme">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>

        <item name="colorPrimary">?themeColorPrimary</item>
        <item name="colorPrimaryDark">?themeColorPrimaryDark</item>
        <item name="colorAccent">?themeColorAccent</item>
        <item name="android:statusBarColor">?themeColorPrimaryDark</item>
        <item name="android:navigationBarColor">?themeColorPrimaryDark</item>

        <item name="android:actionModeBackground">?themeActionModeBackground</item>
        <item name="android:listDivider">?themeListDivider</item>
        <item name="android:alertDialogStyle">?themeAlertDialogStyle</item>
        <item name="android:alertDialogTheme">?themeAlertDialogStyle</item>
        <item name="android:toolbarStyle">?themeToolbarStyle</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="searchViewStyle">?themeSearchViewStyle</item>

        <item name="themeTextSize">@dimen/default_text_size</item>
        <item name="android:textColor">?themeTextColor</item>
        <item name="android:textSize">?themeTextSize</item>

        <item name="themeSelectorTextSize">?themeTextSize</item>
        <item name="themeSearchViewTextSize">?themeTextSize</item>

        <item name="themeFastScrollRecyclerStyle">?attr/themeRecyclerViewStyle</item>

        <item name="themeItemStyle">@style/TemplateTheme.ItemStyle</item>

        <item name="colorControlNormal">?themeTextColorInverse</item>
        <item name="themeGenericButtonStyle">@style/TemplateTheme.GenericButtonStyle</item>
    </style>

    <style name="TemplateTheme.Default" parent="TemplateTheme">
        <item name="themeColorPrimary">@color/defaultColorPrimary</item>
        <item name="themeColorPrimaryDark">@color/defaultColorPrimaryDark</item>
        <item name="themeColorAccent">@color/defaultColorAccent</item>

        <item name="themeTextColor">@color/defaultTextColor</item>
        <item name="themeTextColorInverse">@color/defaultBackgroundColor</item>
        <item name="themeDividerColor">@color/defaultDividerColor</item>

        <item name="themeBackgroundColor">@color/defaultBackgroundColor</item>
        <item name="themeMenuHeaderTextColor">@color/defaultMenuHeaderTextColor</item>

        <item name="themeSettingsCategoryTextColor">@color/defaultSettingsCategoryTextColor</item>
        <item name="themeSettingsItemTextColor">@color/defaultSettingsItemTextColor</item>

        <item name="themeInstancesItemTextColor">@color/defaultInstancesItemTextColor</item>

        <item name="themeAlertBackgroundColor">@color/defaultColorAlertBackground</item>
        <item name="themeAlertTitleColor">@color/defaultColorAlertTitle</item>

        <item name="themeActionModeBackground">@color/defaultColorPrimary</item>

        <item name="themeListDivider">@color/darkListDividerColor</item>

        <item name="themeToolbarStyle">@style/TemplateTheme.ToolBarStyle</item>

        <item name="themeSelectorTextColor">@color/defaultColorAccent</item>

        <item name="themeSearchViewTextColor">@color/defaultColorAccent</item>

        <item name="themeFabStyle">@style/TemplateTheme.FabStyle</item>
        <item name="themeTextStyle">@style/TemplateTheme.TextStyle</item>

        <item name="themeRecyclerViewStyle">@style/TemplateTheme.RecyclerViewStyle</item>

        <item name="themeItemSelectedTextColor">@color/colorWhite</item>
        <item name="themeItemUnselectedTextColor">@color/colorBlack</item>

        <item name="themeTextBackgroundColor">@color/colorAlertEditorEditTextBg</item>

        <item name="themeColorPrimaryOverlay">@color/defaultBackgroundColor</item>
        <item name="themeHiddenContainerColor">@color/hiddenSnackBackground</item>
        <item name="themeColorPressedAccent">@color/pressedAccent</item>

    </style>

    <style name="TemplateTheme.ItemStyle">
        <item name="android:paddingEnd">@dimen/item_padding_startEnd</item>
        <item name="android:paddingStart">@dimen/item_padding_startEnd</item>
        <item name="android:paddingTop">@dimen/item_padding_topBottom</item>
        <item name="android:paddingBottom">@dimen/item_padding_topBottom</item>
    </style>

    <style name="TemplateTheme.RecyclerViewStyle" parent="TemplateTheme">
        <item name="android:layout_marginBottom">@dimen/recycler_margin</item>
        <item name="android:layout_marginTop">@dimen/recycler_margin</item>
        <item name="android:layout_marginEnd">@dimen/recycler_margin</item>
        <item name="android:layout_marginRight">@dimen/recycler_margin</item>
    </style>

    <style name="TemplateTheme.FabStyle" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_marginStart">@dimen/fab_margin</item>
        <item name="android:layout_marginEnd">@dimen/fab_margin</item>
        <item name="android:layout_marginTop">@dimen/fab_margin</item>
        <item name="android:layout_marginBottom">@dimen/fab_margin_bottom</item>
        <item name="rippleColor">?themeBackgroundColor</item>
        <item name="android:clickable">true</item>
        <item name="themeTextStyle">@style/TemplateTheme.TextStyle</item>
        <item name="fabSize">normal</item>
    </style>

    <style name="TemplateTheme.TextStyle" parent="TemplateTheme">
        <item name="android:paddingTop">@dimen/default_text_padding_top_bottom</item>
        <item name="android:paddingBottom">@dimen/default_text_padding_top_bottom</item>
        <item name="android:paddingStart">@dimen/default_text_padding_start_end</item>
        <item name="android:paddingEnd">@dimen/default_text_padding_start_end</item>
        <item name="android:textColor">?themeTextColor</item>
        <item name="android:textSize">?themeTextSize</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">start</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="TemplateTheme.ToolBarStyle" parent="TemplateTheme">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="TemplateTheme.GenericButtonStyle" parent="TemplateTheme">
        <item name="android:layout_width">@dimen/generic_text_view_width</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/background_generic_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">?themeTextSize</item>
        <item name="android:textColor">?themeTextColorInverse</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>


</resources>
